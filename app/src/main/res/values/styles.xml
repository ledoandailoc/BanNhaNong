<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_name">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/md_grey_50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ee5900</item>
    </style>

    <style name="tv_daily">
        <item name="android:textSize">100dp</item>
        <item name="android:textColor">@color/app_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">BNN</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
