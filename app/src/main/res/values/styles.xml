<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Common-->

    <style name="common_text_style">
        <!--<item name="app:font_style">regular</item>-->
    </style>

    <style name="common_large_text_style" parent="common_text_style">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="common_medium_text_style" parent="common_text_style">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="common_top_bar_style">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
    </style>

    <style name="common_top_bar_setting_fr_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:layout_width">?android:actionBarSize</item>
    </style>

    <style name="common_top_bar_setting_iv_style">
        <item name="android:src">@drawable/icon_action_bar_setting</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="common_top_bar_screen_title_style" parent="common_large_text_style">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/while_color</item>
    </style>


</resources>
