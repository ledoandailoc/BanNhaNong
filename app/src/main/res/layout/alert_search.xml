<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/sale_radius"
   >



        <RelativeLayout
            android:background="@color/actionbar_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:id="@+id/relativeLayout2">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_back"
                android:id="@+id/imageView" />

            <TextView
                android:layout_marginLeft="@dimen/common_distance_lv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trở về"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:id="@+id/textView4" />

            <TextView
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/tv_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đóng"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/textView4"
                android:layout_toLeftOf="@+id/tv_back"
                android:layout_toStartOf="@+id/tv_back" />
        </RelativeLayout>

        <LinearLayout
            android:background="#11000000"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2">

            <SearchView

                android:iconifiedByDefault="true"
                android:searchIcon="@drawable/ic_search"
                android:background="@drawable/bg_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sv_domestic_price"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/spiner_category"></Spinner>

            <Spinner
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/spiner_province"/>

            <Spinner
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/spiner_soft"></Spinner>

            <Button
                android:layout_marginBottom="@dimen/common_distance_lv_4"
                android:background="#ee5900"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tìm kiếm"
                android:id="@+id/btn_alert_search" />

        </LinearLayout>


</RelativeLayout>
