<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/sale_radius"
   >



        <RelativeLayout
            android:paddingRight="@dimen/common_distance_lv_1"
            android:background="@color/actionbar_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:id="@+id/relativeLayout2">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_back"
                    android:id="@+id/imageView" />

                <TextView
                    android:layout_marginLeft="@dimen/common_distance_lv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trở về"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView"
                    android:id="@+id/textView4" />
            </RelativeLayout>

            <TextView
                android:layout_marginRight="@dimen/common_distance_lv_2"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:id="@+id/tv_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:background="#11000000"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout2">

            <LinearLayout
                android:layout_marginTop="@dimen/common_distance_lv_2"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_marginRight="@dimen/common_distance_lv_1"
                    android:background="@drawable/bg_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/relativeLayout3">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_search"/>
                </RelativeLayout>

                <EditText
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@color/transparent_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Từ khoá"
                    android:id="@+id/txt_search" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/common_distance_lv_1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_category"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Spinner
                    android:layout_marginLeft="@dimen/common_distance_lv_1"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/spiner_category"></Spinner>
            </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/common_distance_lv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_location"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Spinner
            android:layout_marginLeft="@dimen/common_distance_lv_1"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/spiner_province"/>

        </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/common_distance_lv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_flactua"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Spinner
            android:layout_marginLeft="@dimen/common_distance_lv_1"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/spiner_status"></Spinner>
        </LinearLayout>



            <Button
                android:layout_marginTop="@dimen/common_distance_lv_2"
                android:layout_marginBottom="@dimen/common_distance_lv_4"
                android:background="#ee5900"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tìm kiếm"
                android:textColor="#fff"
                android:id="@+id/btn_alert_search" />

        </LinearLayout>


</RelativeLayout>
