<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_price_height"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    >

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <TextView
            android:layout_marginLeft="@dimen/common_distance_lv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cà phê"
            android:id="@+id/tv_agricultural_name"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerVertical="true"
           />

        <ImageView
            android:id="@+id/iv_volatility_price"
            android:layout_width="@dimen/item_price_image_height"
            android:layout_height="@dimen/item_price_image_height"
            android:src="@drawable/ic_increase"
            android:visibility="visible"
            android:layout_alignTop="@+id/tv_agricultural_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/common_distance_lv_2"/>

        <TextView
            android:layout_marginRight="@dimen/common_distance_lv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="170.000/1kg"
            android:id="@+id/tv_agricultural_price"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_toLeftOf="@+id/iv_volatility_price"
            android:layout_centerVertical="true"
          />


    </RelativeLayout>


</RelativeLayout>