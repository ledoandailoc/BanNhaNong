<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    >

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <TextView
            android:layout_marginLeft="@dimen/common_distance_lv_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cà phê"
            android:id="@+id/tv_agricultural_name"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vũng Tàu"
            android:id="@+id/tv_agricultural_convine"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="170000/kg"
            android:id="@+id/tv_agricultural_price"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="170000/kg"
            android:id="@+id/tv_yesterday_agricultural_price"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_gravity="center_vertical"
            />


        <ImageView
            android:id="@+id/iv_volatility_price"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:src="@drawable/ic_increase"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_distance_lv_2"/>


    </LinearLayout>


</RelativeLayout>