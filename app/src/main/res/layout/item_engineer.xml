<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="#fff">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/iv_avatar_engineer"
            android:src="@drawable/icon_tab_menu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 6"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/iv_avatar_engineer"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:id="@+id/tv_name_engineer"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.000.000 đ"
            android:textSize="16dp"
            android:textColor="@color/md_red_A700"
            android:layout_toRightOf="@+id/iv_avatar_engineer"
            android:layout_below="@+id/tv_name_engineer"
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_contact_engineer"
            android:layout_marginTop="21dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hôm nay 20:40"
            android:textSize="13dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/md_grey_500"
            android:layout_toRightOf="@+id/iv_avatar_engineer"
            android:layout_marginTop="66dp"
            android:id="@+id/tv_time_engineer"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_400"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_contact_engineer"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:textSize="9dp"
                android:layout_marginTop="1.5dp"
                android:layout_marginBottom="1.5dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#fff"
                android:id="@+id/tv_type_engineer"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>