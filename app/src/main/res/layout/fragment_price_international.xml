<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".activity.MainActivity"
    >
    <RelativeLayout
        android:layout_margin="15dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_marginTop="@dimen/common_distance_lv_1"
            android:layout_marginLeft="@dimen/common_distance_lv_1"
            android:background="@drawable/bg_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/relativeLayout3">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"/>
        </RelativeLayout>

        <ListView
            android:layout_marginBottom="@dimen/common_distance_lv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_engineer"
            android:layout_below="@+id/include" />

        <include layout="@layout/header_international_price_agricultural"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/include"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3"></include>

    </RelativeLayout>


</RelativeLayout>


